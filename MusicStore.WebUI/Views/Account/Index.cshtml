@{
    ViewBag.Title = "Index";
}
<div class="row justify-content-md-start">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                Welcome
            </div>
            <div class="card-body">
                @if (Session["Login"] != null)
                {
                    <p>Name: @Session["Login"].ToString()</p>
                    <a href="@Url.Action("Logout","Account")" class="btn btn-warning">Logout</a>
                }
            </div>
        </div>

    </div>
</div>