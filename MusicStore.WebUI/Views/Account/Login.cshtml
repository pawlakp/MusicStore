@model MusicStore.Domain.Entities.Accounts

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLoginPage.cshtml";

}
<div class="container justify-content-center">
    <div class="logreg-forms">
        <h1 class="h3 mb-3 font-weight-normal" style="text-align: center"> Sign in</h1>
        <br />
        @using (Html.BeginForm("Login", "Account", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()

            <div class="form-group">
                @Html.TextBoxFor(m => m.Login, "", new { @class = "form-control form-control-lg", @placeholder = "Login" })

            </div>
            <div class="form-group">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control form-control-lg", @placeholder = "Password" })
            </div>
            <br />
            <div class="form-group">
                <input type="submit" name="submit" class="btn btn-primary btn-block" value="Sign in" />
            </div>
        }
        <a href="#" id="forgot_pswd" style="float:right;">Forgot password?</a>
        <br />
        <hr>

        @Html.ActionLink("Sign up New Account", "Register","Account", null, new { @class = "btn btn-primary btn-block", @button="type" })
        @*<button class="btn btn-primary btn-block" type="button" id="registerButton"><i class="fas fa-user-plus"></i> Sign up New Account</button>*@
    </div>
        <br>
    </div>

