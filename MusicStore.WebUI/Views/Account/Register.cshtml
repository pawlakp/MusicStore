                <div class="checkbox">
                    @Html.EditorFor(model => model.IsPasswordChangeRequired)
                    @Html.ValidationMessageFor(model => model.IsPasswordChangeRequired, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

