@model MusicStore.WebUI.Models.AccountModelDto

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLoginPage.cshtml";

}
<div class="container justify-content-center">
    <div class="logreg-forms">
        <h1 class="h3 mb-3 font-weight-normal" style="text-align: center">Zmiana hasła</h1>
        <br />
        @using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()
            @Html.HiddenFor(m => m.Login)


            <div class="form-group">
                <span class="input-group-text" id="basic-addon1"></span>
                @Html.PasswordFor(m => m.Password, new { @class = "form-control form-control-lg", @placeholder = "Hasło" })
            </div>
            <div class="form-group">
                <span class="input-group-text" id="basic-addon1"></span>
                @Html.PasswordFor(m => m.RepeatPassword, new { @class = "form-control form-control-lg", @placeholder = "Powtórz hasło" })
            </div>
            <br />
            <div class="form-group">
                <input type="submit" name="submit" class="btn btn-primary btn-block" value="Zmień hasło" />
            </div>
        }
        
    </div>
    <br>
</div>

