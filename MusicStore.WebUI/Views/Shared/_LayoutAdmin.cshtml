            <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
                <div class="container-fluid">
                    @Html.ActionLink("MusicStore", "Index", "Home", null, new { @class = "navbar-brand ml-1" })
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                                @Html.ActionLink("Panel administratora", "Index", "Admin",
                                new { returnUrl = Request.Url.PathAndQuery },
                                new { @class = "nav-link active" })
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Zarządaj albumami
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">

                                    <li>
                                        @Html.ActionLink("Lista albumów", "ListAlbums", "Admin",
                                        new { returnUrl = Request.Url.PathAndQuery },
                                        new { @class = "dropdown-item" })

                                    </li>
                                    <li>
                                        @Html.ActionLink("Dodaj album", "AddAlbum", "Admin",
                                        new { returnUrl = Request.Url.PathAndQuery },
                                        new { @class = "dropdown-item" })
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        @Html.ActionLink("Przypisz", "ListAlbums", "Admin",
                                        new { returnUrl = Request.Url.PathAndQuery },
                                        new { @class = "dropdown-item" })
                                    </li>
                                </ul>
                            </li>


                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Zarządaj użytkownikami
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">

                                    <li>
                                        @Html.ActionLink("Lista użytkowników", "ListUsers", "Admin",
                                        new { returnUrl = Request.Url.PathAndQuery },
                                        new { @class = "dropdown-item" })

                                    </li>
                                    <li>
                                        @Html.ActionLink("Dodaj użytkownika", "CreateUser", "Admin",
                                        new { returnUrl = Request.Url.PathAndQuery },
                                        new { @class = "dropdown-item" })
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        @Html.ActionLink("Lista zamówień", "ListAlbums", "Admin",
                                        new { returnUrl = Request.Url.PathAndQuery },
                                        new { @class = "dropdown-item" })
                                    </li>
                                </ul>
                            </li>
                        </ul>

                        <div class="buttons_nav float-right">
                            @Html.ActionLink("Wyloguj", "Logout", "Account",
                           null,
                           new { @class = "btn btn-outline-success" })
                            @*@Html.Action("Welcome", "Account")*@
                        </div>
                        <button type="button" class="navbar-toggler d-block d-md-none float-end">
                            @Html.ActionLink(" ", "Logout", "Account",
                            null,
                             new { @class = "bi bi-box-arrow-in-right" })

                        </button>


                    </div>
                </div>
            </nav>

        </div>
    </header>

    <main role="main" class="pb-3">

        <div class="container-fluid justify-content-center" id="data">
            @RenderBody()
        </div>
    </main>

    
    <script type="text/javascript">
    var ID = document.getElementById('News');
    var IDD = document.getElementById('Products');
    var sendHttpRequest = (method, url) => {
        var promise = new Promise((resolve, reject) => {
            var xhr = new XMLHttpRequest();

            xhr.open(method, url);

            xhr.onload = () => {
                resolve(xhr.response);
            };

            xhr.send();
        });

        return promise;
    };

    window.addEventListener('load', function () {
        sendHttpRequest('GET', '@Url.Action("News", "Admin")').then((responseData) => { ID.innerHTML += responseData })
        sendHttpRequest('GET', '@Url.Action("NumberAllbumsView", "Admin")').then((responseData) => {IDD.innerHTML += responseData})

    })




    </script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/css/select2.min.css" />
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/js/select2.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#albumsList').select2();
            $('#accountsList').select2();
        });
    </script>

</body>
</html>

