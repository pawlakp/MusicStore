
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/ErrorStyles.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.0/font/bootstrap-icons.css" />
    <link href="~/Content/style.css" rel="stylesheet" type="text/css" />
    <title>@ViewBag.Title</title>
</head>
<body>

    <header>
        <div class="fixed-top">
            <nav class="navbar navbar-dark bg-dark">
                <div class="container-fluid">
                    @Html.ActionLink("MusicStore", "Index", null, new { @class = "navbar-brand" })

                    <div id="searchbar">
                        <div class="buttons_nav">
                            <form class="d-flex">
                                <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                                <button class="btn btn-primary" type="submit">Search</button>
                            </form>
                        </div>
                    </div>

                    <div id="buttondesktop">
                        <div class="buttons_nav">
                            @Html.Action("Welcome", "Account")
                        </div>
                        <div class="buttons_nav">
                            @Html.Action("Summary", "Cart")
                        </div>

                    </div>


                    <div id="hidebuttons">
                        <button class="navbar-toggler" type="button">
                            <i class="bi bi-search"></i>
                        </button>
                        <button type="button" class="navbar-toggler" style="text-decoration:none">
                            @Html.ActionLink(" ", "Index", "Cart", null, new { @class = "bi bi-cart" })
                        </button>
                        @if (@Session["Id"] != null)
                        {
                            <button type="button" class="navbar-toggler">
                                @Html.ActionLink(" ", "UserPanel", "Account", null, new { @class = "bi bi-person" })
                            </button>
                        }
                        else
                        {
                            <button type="button" class="navbar-toggler">
                                @Html.ActionLink(" ", "Login", "Account", null, new { @class = "bi bi-box-arrow-in-right" })
                            </button>
                        }

                        <button type="button" id="menubutton" class="navbar-toggler">
                            <a href="#"><i class="bi bi-list"></i></a>
                        </button>
                    </div>
                
                </div>
            </nav>
        </div>
    </header>



    <div class="container-fluid" id="data">
        <main role="main" class="pb-3">
            <div class="row">
                @Html.Action("Menu", "Nav")
                <div class="col-md-auto col-lg-8">
                    @RenderBody()
                </div>
            </div>
        </main>
    </div>


    <script src="~/Scripts/jquery-3.6.0.min.js"></script>
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/musicstore.js"></script>
</body>
</html>

