@model MusicStore.Domain.Entities.AlbumDetails
@{
    ViewBag.Title = "Biblitoteka";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}



<div class="row">
   
    <div class="col-md-2"></div>
    <div class="col-md-8 d-md-none">
        <div class="card">
            @if (Model.ImageData != null)
            {
                @*<img class="img-thumbnail" width="75" height="75" src="" />*@
                <img class="card-img-top img-thumbnail"
                     ,
                     src="@Url.Action("GetImage","Home", new {productId=Model.Id})" alt="Card image cap">
            }
            
        <div class="card-body">
            <h5 class="card-title">@Model.Name</h5>
            <p class="card-text">


                <dl class="dl-horizontal">


                    <dt>
                        @Html.DisplayNameFor(model => model.Artist)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Artist)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Label)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Label)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Year)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Year)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Genre)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Genre)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Country)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Country)
                    </dd>
                </dl>
                <dl>
                    <dd><b>Lista utworów</b></dd>
                    @{
                        int p = 1;
                    }
                    @foreach (var item in Model.Songs)
                    {

                        <dd>
                            @p.@Html.DisplayFor(x => item.Title)
                        </dd>
                        {
                            p += 1;
                        }


                    }

                </dl>
            </p>
            @Html.ActionLink("Biblioteka", "Library", new { id = Session["Id"] }, new { @class = "btn btn-secondary w-100" })
        </div>
        </div>




    </div>
    <div class="col-md-8  d-none d-md-block">
        <div class="row">
            <div class="col-md-10 col-lg-7 col-xl-5" style="float:left;">
                @if (Model.ImageData != null)
                {
                    @*<img class="img-thumbnail" width="75" height="75" src="" />*@
                    <img class="card-img-top" width="150" height="400"
                         ,
                         src="@Url.Action("GetImage","Home", new {productId=Model.Id})" alt="Card image cap">
                }
            </div>
            <div class="col-md-4 col-lg-4">
                <h2> @Html.DisplayFor(model => model.Name)</h2>
                <div class="row">
                    <div class="col-lg-6">
                        <dl class="dl-horizontal">


                            <dt>
                                @Html.DisplayNameFor(model => model.Artist)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Artist)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Label)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Label)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Year)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Year)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Genre)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Genre)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Country)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Country)
                            </dd>



                        </dl>
                    </div>
                    <div class="col-lg-6">

                        <dl>
                            <dd><b>Lista utworów</b></dd>
                            @{
                                int i = 1;
                            }
                            @foreach (var item in Model.Songs)
                            {

                                <dd>
                                    @i.@Html.DisplayFor(x => item.Title)
                                </dd>
                                {
                                    i += 1;
                                }


                            }

                        </dl>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-2 d-none d-md-block">  @Html.ActionLink("Biblioteka", "Library", new { id = Session["Id"] }, new { @class = "btn btn-secondary" })</div>



</div>



