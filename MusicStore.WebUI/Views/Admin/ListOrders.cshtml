@model IEnumerable<MusicStore.Domain.Entities.Order>

@{
    ViewBag.Title = "ListOrders";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<h2 class="mt-3">Lista zamówień</h2>
<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                
                <th>
                    @Html.DisplayNameFor(model => model.Data)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody id="tableBody">
            @foreach (var item in Model)
            {
                <tr>
                    
                    <td>
                        @Html.DisplayFor(modelItem => item.Data)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>

                        @Html.ActionLink("Szczegóły", "OrderDetails", new { id = item.Id }, new { @class = "btn btn-primary bi bi-bag-check-fill " })

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


