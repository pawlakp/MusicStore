
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-md-4 d-none d-md-block">
        <div class="row">
            <div class="card mb-3">
                <div class="row g-0">
                    <div class="col-md-4">
                        <img src="~/Content/Image/checklist.jpg" class="img-fluid img-thumbnail d-none d-md-block" alt="..." width="250" height="250">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h4 class="card-title">Oferta sklepu</h4>
                            <p class="card-text">
                                @Html.ActionLink("Lista albumów", "ListAlbums", "Admin",
new { returnUrl = Request.Url.PathAndQuery },
new { @class = "w-100 btn  btn-outline-primary", @style = "height: 100%", @id = "ListAlbum" })
                            </p>
                            <p class="card-text"><small class="text-muted">Przeglądaj, edytuj ofertę sklepu!</small></p>
                        </div>
                    </div>
                </div>
            </div>


            <div class="card mb-3">
